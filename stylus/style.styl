@import "nib"
@import "nib/vendor"
@import "icon.styl"
@import "animate.styl"
*
    box-sizing: border-box;
body
    padding-top: 125px;
    position: relative;
    background: white;
.header
    display: flex;
    flex-flow: row wrap;
    border-bottom: 1px solid #f5f5f6;
    background: white;
    height: 800px;
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    padding: 2em 4em;
    flex-wrap wrap
    flex-direction column
.postback
    position: absolute;
    top: 0;
    width: 100%;
    margin-top: 120px;
    #back
        position: absolute;
        top: 0;
        background: #ffffff;
        height: 800px;
        width: 100%;
        z-index: -1;
        margin-top: 300px;
.background
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: -2;
    img
        width 100%
.logo
    position: absolute;
    left: 0;
    top: -110px;
.about
    display: flex;
    flex-direction: column;
    align-items: center;
    .me
        box-shadow: 0 1px 2px rgba(0,0,0,0.2);
        padding: 1em;
        text-align center
        max-width: 314px;
        img
            width 150
            border-radius: 50%;
        h1
            color: #00746b;
        #code
            margin-bottom: 0;
            font-size: 2em;
            color: #00746b;
        #aboutShort
            color: #007b69;
            font-style: italic;
            font-size: 1.2em;
.menu
    ul
        display: flex;
        list-style: none;
        justify-content: center;
        padding: 0;
        margin: 0;
        margin-top: 1em
        li
            padding: 1.5em 1.5em;
            min-width: 139px;
            text-align: center;
            cursor: pointer;
            letter-spacing: 0.5;
            color: whitesmoke;
       
.proyecto
    background: rgb(0, 116, 107) !important;
.skills
    background: rgb(49, 105, 191) !important;
.contacto
    background: #bf3131 !important;
.proyectoLine
    border-bottom: 0.2em solid rgb(0, 116, 107);
.skillsLine
    border-bottom: 0.2em solid rgb(49, 105, 191);
.contactoLine
    border-bottom: 0.2em solid #bf3131;
.proyectoFont
    color rgb(0, 116, 107) !important;
.skillsFont
    color rgb(49, 105, 191) !important;
.contactoFont
    color #bf3131 !important;


                

            
            
