@import "nib"
@import "nib/vendor"
.header
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    border-bottom: 1px solid #f5f5f6;
    &-menu
        width: 800px;
        display: flex;
        justify-content: space-between;
        h1
            margin 0
        &Logo
            background-color transparent
        &Item
            display: flex;
            align-items: center;
            ul
                margin: 0;
                padding: 0;
                list-style: none;
                display: flex;
                justify-content: space-around;
                li
                    padding 1em
                    color: #f5f5f6;
.background
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: -1;
    img
        width 100%
.section
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    .container
        width: 800px;
        article
            h2
                text-align center
                color #f5f5f6;
                

            
            
